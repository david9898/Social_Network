{# @var users \AppBundle\Entity\User[] #}
{% extends 'base.html.twig' %}

{% block main %}

    <section id="show_articles">
        {% for article in articles %}

            <div class="article_info" id="{{ article.5 }}">

                <div class="article_user_info">
                    <img src="uploads/profileImages/{{ article.0 }}"/>
                    <div>
                        <span>{{ article.1 }}</span>
                        <span>{{ article.4|date('m/d/Y') }}</span>
                    </div>
                </div>

                <p>{{ article.3 }}</p>

                <img src="uploads/articleImages/{{ article.6 }}" />

                <hr>

                <div class="article_info_footer">
                    {% if article.8 == true %}
                        <p><i class="fas fa-heart liked"></i>Likes <span class="count_likes count">{{ article.2 }}</span></p>
                    {% else %}
                        <p><i class="fas fa-heart"></i>Likes <span class="count_likes count">{{ article.2 }}</span></p>
                    {% endif %}
                    <p><i class="fas fa-comment"></i> Comments <span class="count_comments count">{{ article.7 }}</span></p>
                </div>
            </div>

        {% endfor %}
    </section>

    <input type="hidden" value="{{ csrf_token }}" id="csrf_token">
{% endblock %}

{% block aside %}

    <aside>

    </aside>

{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('js/home.js') }}"></script>

{% endblock %}
