{% extends 'base.html.twig' %}

{% block main %}
    <section>
        {% for article in articles %}

            <div style="width: 650px; border: 1px solid black; padding: 10px">

                {% if article.authorId.id == app.user.id %}
                    <p><a href="{{ path('edit_article', {'id': article.id}) }}">Edit Article</a></p>
                {% endif %}

                <p>{{ article.description }}</p>

                <img src="uploads/articleImages/{{ article.image }}" width="650" />

            </div>

        {% endfor %}
    </section>
{% endblock %}

{% block stylesheets %}
    <link href="node_modules/toastr/build/toastr.css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('node_modules/jquery/dist/jquery.js') }}"></script>
    <script src="{{ asset('node_modules/toastr/build/toastr.min.js') }}"></script>
    <script src="{{ asset('js/common.js') }}"></script>
{% endblock %}
